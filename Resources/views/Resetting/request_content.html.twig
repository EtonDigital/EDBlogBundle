{% trans_default_domain 'FOSUserBundle' %}

<div class="register-holder">
	<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="ajax" data-snippet=".register-holder">
		{% if invalid_username is defined %}
			<p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
		{% endif %}

		<div class="">
			<div class="form-group col-xs-8">
				<input type="text" id="username" name="username" placeholder="{{ 'resetting.request.username'|trans }}" class="form-control"/>
			</div>

			<div class="form-group">
				<button type="submit" name="_submit" class="btn btn-primary">{{ 'resetting.request.submit'|trans }}</button>
			</div>
		</div>

	</form>
</div>
